{
  "name": "02-api-rest-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "knex": "tsx ./node_modules/.bin/knex",
    "lint": "biome lint src --write",
    "format": "biome format src --write",
    "check": "biome check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run test/*.e2e.spec.ts",
    "test:integration": "vitest run test/*.integration.spec.ts",
    "test:coverage": "vitest run --coverage",
    "build": "tsup src --out-dir build",
    "docs:generate": "npm run build && ts-node scripts/generate-openapi.ts",
    "docs:preview": "npx serve docs",
    "prepare": "lefthook install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@biomejs/biome": "^1.9.4",
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/node": "^22.15.19",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.4",
    "lint-staged": "^16.1.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@types/redis": "^4.0.10",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "knex": "^3.1.0",
    "pg": "^8.16.0",
    "redis": "^5.1.0",
    "zod": "^3.25.17"
  }
}
